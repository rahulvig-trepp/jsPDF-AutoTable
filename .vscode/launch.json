    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "name": "launch",
            "url": "http://localhost:5500/examples/webpack/index.html",
            "pathMappings": [
                {
                    "url": "http://localhost:5500/examples/webpack/index.html",
                    "path": "${workspaceFolder}/examples/webpack/dist/bundle.js"
